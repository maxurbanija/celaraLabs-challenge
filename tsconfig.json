{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "playwright"],
    "outDir": "dist"
  },
  "include": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
